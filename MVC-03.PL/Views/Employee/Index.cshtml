<div class="row justify-content-center align-items-center mt-5">
    <form class="row col-8 offset-2" asp-action="Index">
        <div class="col-8">
            <input type="text" class="form-control" name="SearchIn" placeholder="Search By Name " />
        </div>
        <div>
            <input type="submit" value="Search" class="btn btn-success" />
        </div>
    </form>
</div>

<a asp-controller="Employee" asp-action="Create" class="btn btn-primary">Create New Employee</a>

@if (Model.Count() > 0)
{
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                
                <th>@Html.DisplayNameFor(D => D.Name)</th>
                <th>@Html.DisplayNameFor(D => D.Age)</th>
                <th>@Html.DisplayNameFor(D => D.Address)</th>
                <th>@Html.DisplayNameFor(D => D.Department)</th>
                <th>@Html.DisplayNameFor(D => D.Salary)</th>
                <th>@Html.DisplayNameFor(D => D.IsActived)</th>
                <th>@Html.DisplayNameFor(D => D.gender)</th>
                <th>@Html.DisplayNameFor(D => D.Email)</th>
           
            </tr>
        </thead>
        <tbody>
            @foreach(var employee in Model)
            {
                <tr>
                 
                    <td>@employee.Name</td>
                     <td>@employee.Age</td>
                    <td>@employee.Address</td>
                    <td>@employee.Department?.Name</td>
                     <td>@employee.Salary</td>
                    <td>@employee.IsActived</td>
                    <td>@employee.gender</td>
                    <td>@employee.Email</td>
                    <partial name="_ButtonsPartial" model="@employee.Id"></partial>
                   
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>There No Employee</h3>
    </div>
}