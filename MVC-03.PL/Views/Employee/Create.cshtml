
@model Employee

<h1>Create New Employee</h1>
<br />
<br />

<form asp-action="Create">
   
    <div>
        <label class="col-form-label" asp-for="Name"></label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div>
        <label class="col-form-label" asp-for="Age"></label>
        <input type="text" asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>
    <div>
        <label class="col-form-label" asp-for="Address"></label>
        <input type="text" asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div>
        <label class="col-form-label" asp-for="Salary"></label>
        <input type="text" asp-for="Salary" class="form-control" />
        
    </div>
    <div>
        <label class="col-form-label" asp-for="IsActived"></label>
        <input  asp-for="IsActived" class="form-control" />
    </div>
    <div>
        <label class="col-form-label" asp-for="gender"></label>
        <input  asp-for="gender" class="form-control" />
       
    </div>
    <div>
        <label class="col-form-label" asp-for="Email"></label>
        <input type="email" asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div>
        <label class="col-form-label" asp-for="PhoneNumber"></label>
        <input type="text" asp-for="PhoneNumber" class="form-control" />
       
    </div>
    <div>
        <label class="col-form-label" asp-for="IsDelete"></label>
        <input type="text" asp-for="IsDelete" class="form-control" />
        
    </div>
    <div>
        <label class="col-form-label" asp-for="HireDate"></label>
        <input  asp-for="HireDate" class="form-control" />
        
    </div>  
    <input type="submit" value="Create" class="btn btn-primary mt-5" />
    <a asp-action="Index" class="btn btn-light mt-5">Back To List</a>
</form>
@section ValidateSection
{
    <partial name="_validationscriptspartial"></partial>
}

